/* Write your global styles here, in PostCSS syntax */
@tailwind base;
@tailwind components;
@tailwind utilities;
:root {
  box-sizing: border-box;
}
a {
  @apply text-primary underline;
}
.underline-hover {
  @apply decoration-primary/50 transition-colors hover:decoration-primary/75 focus-visible:decoration-primary/75 active:decoration-primary/100;
}
.truncate {
  @apply w-full overflow-hidden text-ellipsis whitespace-nowrap;
}
